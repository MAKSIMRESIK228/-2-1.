@bot.message_handler(commands=['bye'])
def send_bye(message):
    bot.reply_to(message,  "ğŸ˜¢ Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°Ğ¹ÑÑ, ĞµÑĞ»Ğ¸ Ñ‡Ñ‚Ğ¾-Ñ‚Ğ¾ Ğ¿Ğ¾Ğ½Ğ°Ğ´Ğ¾Ğ±Ğ¸Ñ‚ÑÑ!")
@bot.message_handler(commands=['emoji'])
def send_random_emoji(message):
    emojis = ["ğŸ˜Š", "ğŸ˜‚", "ğŸ˜", "ğŸ˜¢", "ğŸ¤”", "ğŸ˜", "ğŸ˜¡", "ğŸ¥³", "ğŸ˜´", "ğŸ‘", "â¤ï¸", "ğŸ‰"]
    random_emoji = random.choice(emojis)
    bot.reply_to(message, f"Ğ¢Ğ²Ğ¾Ğ¹ ÑĞ»ÑƒÑ‡Ğ°Ğ¹Ğ½Ñ‹Ğ¹ ÑĞ¼Ğ°Ğ¹Ğ»Ğ¸Ğº: {random_emoji}")
@bot.message_handler(commands=['mem'])
def send_mem(message):
    images = os.listdir('images')
    img_name = random.choice(images)
    with open(f'images/{img_name}', 'rb') as f:
        bot.send_photo(message.chat.id, f)
@bot.message_handler(commands=['animal'])
def send_animal(message):
    animals = os.listdir('anim')
    img_name = random.choice(animals)
    with open(f'anim/{img_name}', 'rb') as f:
        bot.send_photo(message.chat.id, f)

# Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ±Ğ¾Ñ‚Ğ°
bot.polling()
